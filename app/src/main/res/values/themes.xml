<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base app theme -->
    <style name="Theme.WeatherForecast" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_day</item>
        <item name="colorPrimaryVariant">@color/primary_night</item>
        <item name="colorOnPrimary">@color/on_surface</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_night</item>
        <item name="android:windowBackground">@color/background_day</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
    <!-- Header title -->
    <style name="TextAppearance.App.Header" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <!-- Timestamp text -->
    <style name="TextAppearance.App.Timestamp" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Large temperature -->
    <style name="TextAppearance.App.TempLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

