<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WeatherForecast" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_day</item> <!-- Will be overridden in -night -->
        <item name="colorSecondary">@color/accent</item>
        <item name="android:windowBackground">@color/background_day</item>
    </style>

    <!-- Base App Theme for Day -->
    <style name="Theme.WeatherForecast.Day" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_day</item>
        <item name="colorOnPrimary">@color/text_primary_day</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_day</item>
        <item name="android:windowBackground">@color/background_day</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Base App Theme for Night -->
    <style name="Theme.WeatherForecast.Night" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorOnPrimary">@color/text_primary_night</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_night</item>
        <item name="android:windowBackground">@color/background_night</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Header title -->
    <style name="TextAppearance.App.Header" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/text_primary_day</item> <!-- will be overridden per theme -->
    </style>

    <!-- Timestamp text -->
    <style name="TextAppearance.App.Timestamp" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Large temperature -->
    <style name="TextAppearance.App.TempLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_day</item> <!-- will be overridden per theme -->
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Subtitle text -->
    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_day</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Chip text -->
    <style name="TextAppearance.App.Chip" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Chip style -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/surface_day</item> <!-- Use surface_night in night theme -->
        <item name="android:textColor">@color/text_primary_day</item> <!-- Or text_primary_night -->
        <item name="android:textSize">14sp</item>
        <item name="chipCornerRadius">12dp</item>
    </style>

    <!-- App title -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary_day</item>
    </style>

    <!-- App body text -->
    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary_day</item>
    </style>

    <!-- No action bar variant -->
    <style name="Theme.WeatherForecast.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar overlays (optional, for fragments) -->
    <style name="Theme.WeatherForecast.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WeatherForecast.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
