<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_day">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface_day"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_day"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="28dp"
                    android:background="@drawable/gradient_card_header">

                    <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary_day"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary_day"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/tvMotivationalMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfect day for a walk!"
                        android:textColor="@color/text_secondary_day"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-italic"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary_day"
                        android:textSize="20sp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/tvFeelsLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary_day"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/tvCurrentTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary_day"
                        android:textSize="72sp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-light"/>

                    <ImageView
                        android:id="@+id/ivWeatherIcon"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:contentDescription="Weather Icon"
                        app:tint="@color/icon_tint_day"
                        android:transitionName="weather_icon"/>

                    <TextView
                        android:id="@+id/tvTempRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary_day"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Weather Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface_day"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_day">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:padding="20dp"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_humidity"
                            app:tint="@color/icon_tint_day"
                            android:contentDescription="Humidity Icon"/>

                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/text_primary_day"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wind_beaufort_0"
                            app:tint="@color/icon_tint_day"
                            android:contentDescription="Wind Icon"/>

                        <TextView
                            android:id="@+id/tvWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/text_primary_day"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_pressure"
                            app:tint="@color/icon_tint_day"
                            android:contentDescription="Pressure Icon"/>

                        <TextView
                            android:id="@+id/tvPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/text_primary_day"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cloud"
                            app:tint="@color/icon_tint_day"
                            android:contentDescription="Cloudiness Icon"/>

                        <TextView
                            android:id="@+id/tvCloudiness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/text_primary_day"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hourly Forecast -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hourly Forecast"
                android:textSize="20sp"
                android:textColor="@color/text_primary_day"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-condensed-medium"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHourly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="24dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:overScrollMode="never"/>

            <!-- Daily Forecast -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5-Day Forecast"
                android:textSize="20sp"
                android:textColor="@color/text_primary_day"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-condensed-medium"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="24dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:overScrollMode="never"/>

            <!-- Sunrise/Sunset Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSunriseSunset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface_day"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_day">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center"
                    android:background="@drawable/gradient_sunrise_sunset">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_sunrise"
                            app:tint="@color/icon_tint_day"
                            android:contentDescription="Sunrise Icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunrise"
                            android:textColor="@color/text_secondary_day"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvSunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary_day"
                            android:textSize="18sp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_day"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_sunset"
                            app:tint="@color/icon_tint_day"
                            android:contentDescription="Sunset Icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunset"
                            android:textColor="@color/text_secondary_day"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvSunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary_day"
                            android:textSize="18sp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_heart"
        app:tint="@color/icon_tint_day"
        app:backgroundTint="@color/primary_day"
        android:contentDescription="Favorite"
        app:layout_anchor="@id/cardSunriseSunset"
        app:layout_anchorGravity="bottom|end"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>