<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/stroke_day"
    app:cardBackgroundColor="@color/surface_day">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/gradient_card_forecast">

        <TextView
            android:id="@+id/tvDailyDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_primary_day"
            android:fontFamily="sans-serif-condensed-medium"/>

        <ImageView
            android:id="@+id/ivDailyWeatherIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:tint="@color/icon_tint_day"
            android:contentDescription="@string/weather_icon"
            android:transitionName="daily_weather_icon"/>

        <TextView
            android:id="@+id/tvDailyTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_primary_day"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
